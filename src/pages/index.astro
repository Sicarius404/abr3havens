---
import { Image } from "astro:assets";
import mainBuilding from "../images/main-building.jpg";
import "../styles/global.css";
import Header from "../components/Header.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body class="bg-gray-900 text-white">
    <Header />
    <section class="relative h-[60vh] w-full flex items-center justify-center">
      <div class="absolute inset-0 bg-black/50" aria-hidden="true"></div>
      <Image
        src={mainBuilding}
        alt="Main building of Abr3havens, a modern architectural structure."
        class="absolute inset-0 w-full h-full object-cover -z-10"
        widths={[480, 768, 1024, 1920]}
        sizes="(max-width: 768px) 100vw, 50vw"
      />
      <h1
        class="text-4xl md:text-6xl font-bold text-center text-white z-10 max-w-4xl"
      >
        We donâ€™t just invest in property, we restore possibility!
      </h1>
      <div class="absolute bottom-8 right-8 border-4 border-white/75 p-12">
        <div class="flex items-center gap-12 text-center">
          <div class="border border-white/75 p-8">
            <h3 class="text-4xl font-bold">3</h3>
            <p class="text-lg uppercase tracking-wider">Properties</p>
          </div>

          <div class="w-24 border-t-4 border-cyan-400"></div>

          <div class="border border-white/75 p-8">
            <h3 class="text-4xl font-bold">12</h3>
            <p class="text-lg uppercase tracking-wider">Spaces</p>
          </div>

          <div class="w-24 border-t-4 border-cyan-400"></div>

          <div class="border border-white/75 p-8">
            <h3 class="text-4xl font-bold">...</h3>
            <p class="text-lg uppercase tracking-wider">Possibilities</p>
          </div>
        </div>
      </div>
    </section>
    <main class="p-8">
      <h2 class="text-3xl font-bold mb-4">More Content Below</h2>
      <p>
        This is where the rest of your page content will go. You can now scroll
        down to see it.
      </p>
    </main>
  </body>
</html>
